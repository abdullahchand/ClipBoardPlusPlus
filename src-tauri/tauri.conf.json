{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipboardpro",
  "version": "0.1.0",
  "identifier": "com.clipboardpro.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "clipboardpro",
        "width": 800,
        "height": 250,
        "decorations": false,
        "alwaysOnTop": true,
        "maximizable": true,
        "shadow": true,
        "minimizable": true,
        "closable": false,
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo5.jpg"
    ]
  }
}
